<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Interpolation tools -->
    <array name="interpolation_tools">
        <item>@drawable/ic_selection_tool</item>
        <item>@drawable/ic_anchor_point_tool</item>
        <item>@drawable/ic_scale_tool</item>
        <item>@drawable/ic_rotate_tool</item>
    </array>

    <string-array name="interpolation_tool_names">
        <item>Move</item>
        <item>AnchorPoint</item>
        <item>Scale</item>
        <item>Rotate</item>
    </string-array>

    <array name="interpolation_tool_id">
        <item>@id/tool_move</item>
        <item>@id/tool_anchor</item>
        <item>@id/tool_scale</item>
        <item>@id/tool_rotate</item>
    </array>

    <!-- /Interpolation tools -->
    
    
    <!-- Line tools -->
    <array name="line_tools">
        <item>@drawable/ic_brush_tool</item>
        <item>@drawable/ic_line_tool</item>
        <item>@drawable/ic_polyline_tool</item>
    </array>

    <string-array name="line_tool_names">
        <item>Freehand</item>
        <item>Line</item>
        <item>Polyline</item>
    </string-array>

    <array name="line_tool_id">
        <item>@id/tool_freehand</item>
        <item>@id/tool_line</item>
        <item>@id/tool_polyline</item>
    </array>
    <!-- /Line tools -->


    <!-- Polygonal tools -->
    <array name="poly_tools">
        <item>@drawable/ic_rectangle_tool</item>
        <item>@drawable/ic_triangle_tool</item>
    </array>

    <string-array name="poly_tool_names">
        <item>Rectangle</item>
        <item>Polygon</item>
    </string-array>

    <array name="poly_tool_id">
        <item>@id/tool_rectangle</item>
        <item>@id/tool_polygon</item>
    </array>
    <!-- /Polygonal tools -->

    <!-- Circular tools -->
    <array name="circ_tools">
        <item>@drawable/ic_circle_tool</item>
    </array>

    <string-array name="circ_tools_names">
        <item>Circle</item>
    </string-array>

    <array name="circ_tool_id">
        <item>@id/tool_circle</item>
    </array>
    <!-- /Circular tools -->


    <item type="id" name="tool_move"></item>
    <item type="id" name="tool_freehand"></item>
    <item type="id" name="tool_line"></item>
    <item type="id" name="tool_rectangle"></item>
    <item type="id" name="tool_polyline"></item>
    <item type="id" name="tool_polygon"></item>
    <item type="id" name="tool_circle"></item>
    <item type="id" name="tool_anchor"></item>
    <item type="id" name="tool_scale"></item>
    <item type="id" name="tool_rotate"></item>


    <item type="color" name="button_unselected_bg">#fff</item>
    <item type="color" name="button_selected_bg">#DADADA</item>
</resources>
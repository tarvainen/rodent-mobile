<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_drawing_horizontal_padding"
    android:paddingRight="@dimen/activity_drawing_horizontal_padding"
    android:paddingTop="@dimen/activity_drawing_vertical_padding"
    android:paddingBottom="@dimen/activity_drawing_vertical_padding"
    tools:context="rodent.rodentmobile.DrawingActivity">

    <rodent.rodentmobile.GestureDetectingDrawingBoard
        android:id="@+id/drawing_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/button_unselected_bg"
        android:layout_below="@+id/tools2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/tools2">

        <Spinner
            android:id="@+id/spinner_interpolation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/button_unselected_bg"
            android:spinnerMode="dropdown"
            android:layout_alignParentStart="true"
            android:padding="3dp">
        </Spinner>

        <Spinner
            android:id="@+id/spinner_lines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/button_unselected_bg"
            android:spinnerMode="dropdown"
            android:layout_toRightOf="@+id/spinner_interpolation"
            android:padding="3dp">
        </Spinner>

        <Spinner
            android:id="@+id/spinner_polygons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/button_unselected_bg"
            android:spinnerMode="dropdown"
            android:layout_toRightOf="@+id/spinner_lines"
            android:padding="3dp">
        </Spinner>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_file"
            android:layout_alignParentEnd="false"
            android:layout_toRightOf="@+id/spinner_polygons"
            android:background="@color/button_unselected_bg"
            android:padding="3dp"
            android:spinnerMode="dropdown" />

        <ImageView
            android:id="@+id/btn_open_broadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_wifi_black_36dp"
            android:layout_centerVertical="true"
            android:onClick="onImageViewClick"/>

    </RelativeLayout>

</RelativeLayout>

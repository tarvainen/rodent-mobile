<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_drawing_horizontal_padding"
    android:paddingRight="@dimen/activity_drawing_horizontal_padding"
    android:paddingTop="@dimen/activity_drawing_vertical_padding"
    android:paddingBottom="@dimen/activity_drawing_vertical_padding"
    tools:context="rodent.rodentmobile.DrawingActivity">

    <rodent.rodentmobile.GestureDetectingDrawingBoard
        android:id="@+id/drawing_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tools_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tools_view">

        <ImageButton
            android:id="@+id/button_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_open_with_black_36dp"
            android:layout_alignParentStart="true"
            android:onClick="onButtonClicked"/>

        <ImageButton
            android:id="@+id/button_freehand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create_black_36dp"
            android:layout_toRightOf="@+id/button_move"
            android:onClick="onButtonClicked"/>

        <ImageButton
            android:id="@+id/button_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_border_style_black_36dp"
            android:layout_toRightOf="@+id/button_freehand"
            android:onClick="onButtonClicked"/>

        <ImageButton
            android:id="@+id/button_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove_black_36dp"
            android:layout_toRightOf="@+id/button_rectangle"
            android:onClick="onButtonClicked"/>

        <ImageButton
            android:id="@+id/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_format_size_black_36dp"
            android:layout_toRightOf="@+id/button_line"
            android:onClick="onButtonClicked"/>

        <ImageButton
            android:id="@+id/button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_settings_black_36dp"
            android:layout_alignParentEnd="true"
            android:onClick="onButtonClicked"/>

    </RelativeLayout>

</RelativeLayout>
